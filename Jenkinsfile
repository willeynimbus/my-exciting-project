pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                // Example: sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                // Example: sh 'npm test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                // Example: sh './deploy.sh'
            }
        }
    }
}
